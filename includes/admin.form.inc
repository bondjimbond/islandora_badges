<?php
/**
 * @file
 * Admin form functions for Islandora Altmetrics.
 */

/**
 * Admin form for Islandora Badges.
 */
function islandora_badges_admin_form($form, $form_settings) {
  $form['islandora_badges_altmetrics_badge'] = array(
    '#type' => 'textfield',
    '#title' => t('Altmetrics Badge'),
    '#description' => t('Name of the badge style to use when displaying the Altmetrics information.'),
    '#default_value' => variable_get('islandora_badges_altmetrics_badge', 'Default'),
  );
  
  $form['islandora_badges_altmetrics_popover'] = array(
    '#type' => 'textfield',
    '#title' => t('Altmetrics Popover'),
    '#description' => t('Popover direction for extra information.'),
    '#default_value' => variable_get('islandora_badges_altmetrics_popover', 'right'),
  );
  
  $form['islandora_badges_scopus_api_key'] = array(
    '#type' => 'textfield',
    '#title' => t('Scopus API Key'),
    '#description' => t('The default key here is for demonstartion purposes only; you need to get your own key.'),
    '#default_value' => variable_get('islandora_badges_scopus_api_key', 'b3a71de2bde04544495881ed9d2f9c5b'),
  );
  
  $form['islandora_badges_wos_username'] = array(
    '#type' => 'textfield',
    '#title' => t('Web of Science username'),
    '#description' => t('Your username for the Article Match Retrieval service.'),
    '#default_value' => variable_get('islandora_badges_wos_username', 'none'),
  );
  
  $form['islandora_badges_wos_password'] = array(
    '#type' => 'textfield',
    '#title' => t('Web of Science password'),
    '#description' => t('Your password for the Article Match Retrieval service.'),
    '#default_value' => variable_get('islandora_badges_wos_password', 'none'),
  );

  $form['islandora_badges_wos_badgetype'] = array(
    '#type' => 'radios',
    '#title' => t('Web of Science badge type'),
    '#description' => t('You may choose an image generated by shields.io, or a text block you can style yourself with CSS.'),
    '#options' => array(t('image'), t('text')),
    '#default_value' => variable_get('islandora_badges_wos_badgetype', 0),
  );
    
  $form['islandora_badges_doi_xpath'] = array(
    '#type' => 'textfield',
    '#title' => t('DOI XPath'),
    '#description' => t('MODS XPath for retrieving the DOI.'),
    '#default_value' => variable_get('islandora_badges_doi_xpath', '/mods:mods/mods:identifier[@type="doi"]'),
  );

  $form['islandora_badges_title_xpath'] = array(
    '#type' => 'textfield',
    '#title' => t('Title XPath'),
    '#description' => t('MODS XPath for retrieving the title.'),
    '#default_value' => variable_get('islandora_badges_doi_xpath', '/mods:mods/mods:titleInfo/mods:title'),
  );

  return system_settings_form($form);
}
